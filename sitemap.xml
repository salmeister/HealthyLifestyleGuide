---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
  <!-- Homepage - Highest Priority -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- About Page -->
  <url>
    <loc>{{ site.url }}/about/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Category Pages (anchor links on homepage) -->
  <url>
    <loc>{{ site.url }}/#diet-nutrition</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ site.url }}/#health-wellness</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ site.url }}/#exercise-fitness</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ site.url }}/#sleep-rest</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ site.url }}/#brain-stress</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ site.url }}/#happiness-spirituality</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ site.url }}/#perspective</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- Notes/Articles - High Priority Content -->
  {% for note in site.notes %}
  <url>
    <loc>{{ note.url | absolute_url }}</loc>
    <lastmod>{% if note.lastmod %}{{ note.lastmod | date_to_xmlschema }}{% elsif note.date %}{{ note.date | date_to_xmlschema }}{% else %}{{ site.time | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {% if note.image %}
    <image:image>
      <image:loc>{{ note.image | absolute_url }}</image:loc>
      <image:title>{{ note.title | xml_escape }}</image:title>
      <image:caption>{{ note.description | xml_escape | default: note.title | xml_escape }}</image:caption>
    </image:image>
    {% endif %}
    {% assign link_url = note.link | downcase %}
    {% if link_url contains 'youtube.com' or link_url contains 'youtu.be' %}
    {% if note.link contains 'v=' %}
    {% assign vid_id = note.link | split: 'v=' | last | split: '&' | first %}
    {% elsif note.link contains 'youtu.be/' %}
    {% assign vid_id = note.link | split: 'youtu.be/' | last | split: '?' | first %}
    {% endif %}
    {% if vid_id %}
    <image:image>
      <image:loc>https://img.youtube.com/vi/{{ vid_id }}/maxresdefault.jpg</image:loc>
      <image:title>{{ note.title | xml_escape }}</image:title>
      <image:caption>{{ note.description | xml_escape | default: note.title | xml_escape }}</image:caption>
    </image:image>
    {% endif %}
    {% endif %}
  </url>
  {% endfor %}
  
  <!-- Static Pages -->
  {% for page in site.pages %}
    {% unless page.url contains '/404' or page.url contains '/search' or page.url == '/' or page.url contains 'sitemap' or page.url contains 'robots' or page.url contains 'feed' %}
    <url>
      <loc>{{ page.url | absolute_url }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
    {% endunless %}
  {% endfor %}
</urlset>